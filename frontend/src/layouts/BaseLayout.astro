---
// import Sidebar from '../components/Sidebar.tsx';
import AdBanner from '../components/AdBanner.tsx';
import { ThemeProvider } from '../components/ThemeContext.tsx';

export interface Props {
  title: string;
  description?: string;
  canonical?: string;
  themeColor?: string;
  showSidebar?: boolean;
}

const { title, description, canonical, themeColor = "#1e40af" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <meta name="theme-color" content={themeColor} />
    {canonical && <link rel="canonical" href={canonical} />}
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="https://hexmos.com/freedevtools/t/favicon.png" />
    
    <!-- Import global CSS with Tailwind -->
    <link rel="stylesheet" href="/src/styles/global.css" />
    
    <!-- Theme initialization script -->
    <script>
      // Initialize theme before page renders to prevent flash
      (function() {
        const theme = localStorage.getItem('theme') || 'dark';
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      })();
    </script>
  </head>
  <body class="m-0 p-0 font-sans bg-slate-50 text-slate-800 leading-relaxed dark:bg-slate-900 dark:text-slate-200">
    <div class="flex h-screen">
      <!-- Sidebar temporarily commented out but preserved for future use -->
      <!-- {showSidebar && (
        <ThemeProvider client:load>
          <Sidebar client:load currentPath={Astro.url.pathname} basePath="/freedevtools/t" />
        </ThemeProvider>
      )} -->
      
      <!-- AdBanner component with responsive positioning -->
      <ThemeProvider client:load>
        <AdBanner client:load />
      </ThemeProvider>
      
      <!-- Main content area adjusted for banner layout -->
      <main class="flex-1 overflow-auto bg-background pt-36 lg:pt-0 lg:pr-80">
        <ThemeProvider client:load>
          <slot />
        </ThemeProvider>
      </main>
    </div>
  </body>
</html> 